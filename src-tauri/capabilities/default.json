{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "updater:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "updater:default",
    "process:default"
  ]
}